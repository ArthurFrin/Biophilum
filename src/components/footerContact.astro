---
// footerContact.astro - Composant de pied de page avec informations de contact
import { Image } from 'astro:assets';
import cvDownloadLink from '../assets/cv-frin-philippe.pdf';
import logoWhite from '../assets/img/Biophilum_white.webp';
---

<footer id="contact">
  <div class="left">
    <h3 class="title">Contact</h3>
    <nav>
      <a href="tel:0602148950" class="phone-link">
        Téléphone : <strong>0602148950</strong>
      </a>
      <a href="mailto:biophilum@orange.fr">Mail : <strong>biophilum@orange.fr</strong></a>
      <a href="mailto:frin_philippe@orange.fr">ou : <strong>frin_philippe@orange.fr</strong></a>
      <a href={cvDownloadLink} download="cv_frin_philippe.pdf">CV</a>
    </nav>
    <div>Adresse postale : 124 rue de Belphaget 44150 Saint Géréon</div>
    <div class="copyright">© {new Date().getFullYear()} Biophilum - Tous droits réservés</div>
  </div>
  <div class="right desk">
    <Image draggable="false" class="desk" src={logoWhite} alt="Logo Biophilum" />
  </div>
</footer>

<script>
  // Gestion du comportement différent sur mobile
  document.addEventListener('DOMContentLoaded', () => {
    const phoneLink = document.querySelector('.phone-link');
    const isMobile = /Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent);
    
    if (!isMobile && phoneLink) {
      phoneLink.addEventListener('click', (e) => {
        if (!isMobile) {
          e.preventDefault();
        }
      });
    }
  });
</script>

<style lang="scss">
footer {
  display: flex;
  justify-content: space-between;
  background-color: #1d1d1d;
  color: #fff;
  padding: 0 5%;
  width: 100%;

  a {
    color: #fff;
    text-decoration: none;
    &:hover {
      text-decoration: underline;
    }
  }

  nav {
    display: flex;
    flex-direction: column;
    margin-bottom: 5px;
  }

  .left {
    margin: 40px 0 20px;
    
    .copyright {
      margin-top: 15px;
      font-size: 14px;
      opacity: 0.8;
    }
  }

  .right {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;

    img {
      width: 400px;
      height: auto;
    }
  }
}
@media screen and (max-width: 1200px) {
  .desk {
    display: none !important;
  }
}
</style>